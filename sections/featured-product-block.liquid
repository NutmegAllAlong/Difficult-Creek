{% if section.settings.product != blank %}
  {% assign product = section.settings.product %}
  {% assign collection = null %}
  
  <div class="featured-product-wrapper page-width section-{{ section.id }}-padding">
    {% render 'product-card', product: product %}
  </div>
{% endif %}

{% schema %}
{
  "name": "Featured Product Block",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    }
  ],
  "presets": [
    {
      "name": "Featured Product Block"
    }
  ]
}
{% endschema %}
