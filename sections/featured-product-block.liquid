{% schema %}
{
  "name": "Featured Product",
  "class": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    }
  ],
  "blocks": [
    {
      "type": "product_display",
      "name": "Product Display",
      "settings": [
        {
          "type": "product",
          "id": "featured_product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Product Display"
    }
  ]
}
{% endschema %}

{% for block in section.blocks %}
  {% if block.type == 'product_display' %}
    {% assign product = block.settings.featured_product %}
    {% if product != blank %}
      <div class="featured-product-block" {{ block.shopify_attributes }}>
        {% render 'product-card', product: product %}
      </div>
    {% endif %}
  {% endif %}
{% endfor %}
