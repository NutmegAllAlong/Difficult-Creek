{% doc %}
  @prompt
    Create a rich text section with three fields: first a "Subtitle" field (centered), then a "Title" field (centered), then a rich text "Text" field (left-aligned) that supports bullet points and HTML formatting. Use these exact field names - "Subtitle", "Title", and "Text" - so they pick up the theme's default formatting. Include proper rendering for bullet lists created in the rich text editor.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-rich-text-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-rich-text-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-rich-text-subtitle-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 16px;
  }

  .ai-rich-text-title-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 24px;
  }

  .ai-rich-text-content-{{ ai_gen_id }} {
    text-align: left;
  }

  .ai-rich-text-content-{{ ai_gen_id }} ul {
    list-style-type: disc;
    padding-left: 20px;
    margin: 16px 0;
  }

  .ai-rich-text-content-{{ ai_gen_id }} ol {
    list-style-type: decimal;
    padding-left: 20px;
    margin: 16px 0;
  }

  .ai-rich-text-content-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-rich-text-content-{{ ai_gen_id }} p {
    margin-bottom: 16px;
  }

  .ai-rich-text-content-{{ ai_gen_id }} h1,
  .ai-rich-text-content-{{ ai_gen_id }} h2,
  .ai-rich-text-content-{{ ai_gen_id }} h3,
  .ai-rich-text-content-{{ ai_gen_id }} h4,
  .ai-rich-text-content-{{ ai_gen_id }} h5,
  .ai-rich-text-content-{{ ai_gen_id }} h6 {
    margin-top: 24px;
    margin-bottom: 16px;
  }

  .ai-rich-text-content-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-rich-text-content-{{ ai_gen_id }} a:hover {
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .ai-rich-text-block-{{ ai_gen_id }} {
      padding: 30px 15px;
    }
  }
{% endstyle %}

<div class="ai-rich-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-rich-text-container-{{ ai_gen_id }}">
    {% if block.settings.subtitle != blank %}
      <div class="ai-rich-text-subtitle-{{ ai_gen_id }}">
        {{ block.settings.subtitle }}
      </div>
    {% endif %}

    {% if block.settings.title != blank %}
      <div class="ai-rich-text-title-{{ ai_gen_id }}">
        {{ block.settings.title }}
      </div>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-rich-text-content-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Rich text",
  "tag": null,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 800
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#7f4a88"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Rich text"
    }
  ]
}
{% endschema %}
